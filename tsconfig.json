{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "types": ["@types/node", "@nuxtjs/i18n", "@pinia/nuxt"]
  },
  "include": [
    "app/**/*",
    "server/**/*",
    ".nuxt/types/**/*",
    ".nuxt/imports.d.ts",
    ".nuxt/nuxt.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".output",
    ".nuxt/dist"
  ]
}
